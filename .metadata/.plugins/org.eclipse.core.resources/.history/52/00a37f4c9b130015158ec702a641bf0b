		contentPane.add(lblTipoDeInstalacin);
		
		JRadioButton rdbtnServidor = new JRadioButton("Servidor");
		rdbtnServidor.setBackground(new Color(255, 255, 255));
		rdbtnServidor.setBounds(10, 39, 109, 23);
