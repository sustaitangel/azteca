package Usuarios;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import javax.swing.JRadioButton;
import javax.swing.JTable;

import Conexiones.Conexion;
import Qwertys.Comunes;

public class ObtenerTipo {
	public void tipo(JRadioButton rdbtnAdministrador, JTable table){
		Conexion cx=new Conexion();
		Connection cn=cx.conexion();
		Statement comando;
		int selected;
		selected=table.getSelectedRow(); 
		String cantidad;
		cantidad=table.getValueAt(selected, 4).toString();
		try {
			Comunes q=new Comunes();
			String sql=q.SelectWhere("perfil", Comunes.tablas[0], "Usuario", cantidad);
			comando=(Statement) cn.createStatement();
			ResultSet rs= ((java.sql.Statement) comando).executeQuery(sql);
			if(rs.next()){
				int perfil=rs.getInt("perfil");
				if (perfil==0){
					System.out.println(perfil);
				}else{
					System.out.println(perfil);
				}
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}

}
